# Firebase Configuration (Optional - for online features)
# Get these values from Firebase Console → Project Settings → General → Your apps
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Application Configuration
REACT_APP_APP_NAME="SafiBuilds Block Puzzle"
REACT_APP_APP_VERSION=1.0.0
REACT_APP_PACKAGE_NAME=com.safibuilds.blockblast.web

# Development Settings
NODE_ENV=development
REACT_APP_DEBUG=false

# PWA Configuration
REACT_APP_PWA_NAME="SafiBuilds Block Puzzle"
REACT_APP_PWA_SHORT_NAME="Block Puzzle"
REACT_APP_PWA_DESCRIPTION="A fun and addictive block puzzle game"
REACT_APP_PWA_THEME_COLOR=#6366f1
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# Social Media Links (for About page)
REACT_APP_WEBSITE_URL=https://safibuilds.com
REACT_APP_TWITTER_URL=https://twitter.com/safibuilds
REACT_APP_GITHUB_URL=https://github.com/safibuilds
REACT_APP_DISCORD_URL=https://discord.gg/safibuilds

# Analytics (Optional)
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# AdSense Configuration (for monetization)
REACT_APP_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxxx
REACT_APP_ADSENSE_SLOT_ID=1234567890

# API Configuration (if using external APIs)
REACT_APP_API_BASE_URL=https://api.safibuilds.com
REACT_APP_API_VERSION=v1

# Feature Flags
REACT_APP_ENABLE_FIREBASE=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ADS=false
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false
REACT_APP_ENABLE_OFFLINE_MODE=true

# Security
REACT_APP_CSP_NONCE=random_nonce_here

# Debugging
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_REDUX_DEVTOOLS=false

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Performance
REACT_APP_PRELOAD_CRITICAL_ASSETS=true
REACT_APP_LAZY_LOAD_IMAGES=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# Localization (for future multi-language support)
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de,pt,it,ja,ko,zh

# Contact Information
REACT_APP_SUPPORT_EMAIL=support@safibuilds.com
REACT_APP_FEEDBACK_EMAIL=feedback@safibuilds.com
REACT_APP_BUSINESS_EMAIL=business@safibuilds.com

# Legal
REACT_APP_PRIVACY_POLICY_URL=https://safibuilds.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://safibuilds.com/terms
REACT_APP_COOKIE_POLICY_URL=https://safibuilds.com/cookies

# App Store Links (for future mobile app versions)
REACT_APP_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.safibuilds.blockblast
REACT_APP_APP_STORE_URL=https://apps.apple.com/app/safibuilds-block-puzzle/id123456789

# Development Tools
REACT_APP_ENABLE_WHY_DID_YOU_RENDER=false
REACT_APP_ENABLE_PROFILER=false
